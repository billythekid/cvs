{% extends '_layout' %}

{% block content %}
  {% if currentUser %}
    <p><span class="right">Welcome, <a href="profile">{{ currentUser.friendlyName }}</a>! <a href="{{ logoutUrl }}">Logout</a></span></p>

  {% else %}
    <p align="right">
      <a href="login">Log In</a>
      <a href="register">Register</a>
    </p>
  {% endif %}

  <h1>Homepage</h1>
  <h2>Read people's CVs</h2>
  <ul>
    {% for cv in craft.entries.section('cvs') %}
      <li><a href="{{ cv.url }}">{{ cv.title }}</a></li>
    {% endfor %}
  </ul>
{% endblock %}