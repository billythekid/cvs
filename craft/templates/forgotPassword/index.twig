{% extends "_layout" %}
{% set title = 'Forgot Password' %}

{% block content %}
  <p><a href="./">Home</a></p>
  <h1 align="center">Forgot Password?</h1>
  <form method="post" accept-charset="UTF-8">
    {{ getCsrfInput() }}
    <input type="hidden" name="action" value="users/sendPasswordResetEmail">
    <input type="hidden" name="redirect" value="">

    <h3><label for="loginName">Username or email</label></h3>
    <input id="loginName" type="text" name="loginName"
        value="{% if loginName is defined %}{{ loginName }}{% else %}{{ craft.session.rememberedUsername }}{% endif %}">

    {% if errors is defined %}
      <ul class="errors">
        {% for error in errors %}
          <li>{{ error }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    <input class="mar-t-b" type="submit" value="Submit">
  </form>
{% endblock %}